{
  "name": "readable-stream-with-safe-resolvers",
  "version": "1.0.0",
  "description": "A safe, resolver-style wrapper for ReadableStream, allowing external push, close, and error operations safely.",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.js"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.umd.cjs"
      }
    }
  },
  "scripts": {
    "test:watch": "vitest watch --coverage",
    "test": "vitest run --coverage --coverage.reporter=cobertura --coverage.reporter=text",
    "lint": "npx --node-options='--experimental-strip-types' eslint --flag unstable_native_nodejs_ts_config",
    "build": "vite build && tsc --project tsconfig.build.json && node utils/copy.ts -- -o dist -f ./package.json -f ./README.md -f ./LICENSE -f ./CHANGELOG.md",
    "clean": "node utils/remove.ts -- -f ./dist -f ./TestResults"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juner/readable-stream-with-safe-resolvers.git"
  },
  "keywords": [
    "readable-stream",
    "stream",
    "deferred",
    "resolver",
    "safe",
    "pushable"
  ],
  "author": "juners",
  "license": "MIT",
  "engines": {
    "node": "^24.x"
  },
  "bugs": {
    "url": "https://github.com/juner/readable-stream-with-resolver/issues"
  },
  "homepage": "https://github.com/juner/readable-stream-with-resolver#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/fs-extra": "^11.0.4",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "path": "^0.12.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
